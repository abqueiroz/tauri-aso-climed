{
  "name": "tauri-sidecar-api",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "main": "dist/index.cjs",
  "scripts": {
    "dev": "node --enable-source-maps dist/index.cjs",
    "build:dev": "tsup src/index.ts --format cjs --target node18 --sourcemap --clean",
    "pkg:host": "pkg dist/index.cjs --output ../src-tauri/binaries/api",
    "rename:triple": "node scripts/rename-to-target-triple.mjs",
    "build:host": "npm run build && npm run pkg:host && npm run rename:triple",
    "db:prep": "node scripts/ensure-db-dir.mjs",
    "db:gen": "npm run db:prep && drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "npm run db:prep && drizzle-kit migrate --config=drizzle.config.ts",
    "db:seed": "tsx src/seed.ts",
    "start": "node dist/index.cjs",
    "build": "tsup src/index.ts --format cjs --target node18 --sourcemap --clean",
    "dev:up": "npm run build && npm run start"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.36.4",
    "express": "^4.21.2",
    "nanoid": "^5.0.8",
    "puppeteer": "^23.10.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@yao-pkg/pkg": "^6.3.1",
    "drizzle-kit": "^0.31.8",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}